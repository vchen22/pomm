<body class="text-center">
  <h1>Pomm</h1>
  <div class="text-center" id="greeting">
    <h2>Welcome back for some immersive study sessions!</h2>
  </div>
  <h2>Sign in to start</h2>
  <dialog id="authDialog" class="text-center shadow-lg">
      <p class="text-center">Email/Password Combination Not Found. Please Try Again.</p>
      <button id="authConfirm">OK</button>
  </dialog>
  <div class="container-fluid">
    <form class="form-signin" action="/home" id="signin-form">
      <label for="inputEmail" class="sr-only"></label>
      <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
      <label for="inputPassword" class="sr-only"></label>
      <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
      <button id="submit" class="btn btn-link btn-primary btn-lg btn-block work-button text-decoration-none shadow-lg"
        type="submit">Sign in</button>
    </form>
  </div>

  <div class="container-fluid">
    <h2 class="sign-up-text">Don't have an account?</h2>
    <a class="btn btn-link btn-primary btn-lg btn-block work-button text-decoration-none shadow-lg sign-up-btn"
      href="/signup">
      Sign Up
    </a>
  </div>


  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
