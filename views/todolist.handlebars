	{{> backButton}}
	
	<!-- to do list -->
	<section class="todolist text-center" id="list-bg">
		<h1>To-do list</h1>
		<main>
			<dialog id="fullDialog" class="text-center shadow-lg">
				<p class="text-center">Maximum number of tasks added. Please remove some to add more.</p>
				<button id="fullConfirm">OK</button>
			</dialog>
			<dialog id="validDialog" class="text-center shadow-lg">
				<p>Please enter a valid task.</p>
				<button id="validConfirm">OK</button>
			</dialog>
		</main>
		<ul id="todoList">
		</ul>
	</section>

	

	<!-- add task button/form -->
	<form class="add-task" id="add-task-form" role="form" method="get" action="/addTask">
		<label for="taskname"></label>
		<input type="text" id="task-input" placeholder="Task Name" name="taskname" required />

		<button class="btn btn-primary" id="add-btn">Add Task</button>
	</form>
	
