<body class="text-center">
    <h1>Pomm</h1>
    <div class="text-center" id="greeting">
        <h2>Sign up for some immersive study sessions!</h2>
    </div>

    <dialog id="passwordDialog" class="text-center shadow-lg">
        <p id="passwordText">Passwords don't match!</p>
        <button id="passwordConfirm">OK</button>
    </dialog>

    <dialog id="weakDialog" class="text-center shadow-lg">
        <p id="weakText">Password Not Strong Enough. Please Create A Password With At Least 6 Characters.</p>
        <button id="weakConfirm">OK</button>
    </dialog>

    <dialog id="invalidDialog" class="text-center shadow-lg">
        <p id="invalidText">Email Address Not Valid. Please Enter A Valid Email.</p>
        <button id="invalidConfirm">OK</button>
    </dialog>

    <dialog id="emailDialog" class="text-center shadow-lg">
        <p id="emailText">Email Already In Use. Please Sign In Instead.</p>
        <button id="emailConfirm">OK</button>
    </dialog>

    <h2>Sign up to start</h2>
    <form id="signup-form">
        <div class="form-group">
            <input type="text" class="form-control" id="signup-first" placeholder="Enter first name">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="signup-last" placeholder="Enter last name">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="signup-email" placeholder="Enter email">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="signup-password" placeholder="Password">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="signup-confirm" placeholder="Confirm Password">
        </div>
        <button id="submit" class="btn-lg btn-primary btn-block" type="submit">Sign up</button>
    </form>
    <h2>Already have an account?</h2>
    <a class="btn-lg btn-primary btn-block text-decoration-none" href="/">
        Sign In
    </a>

