<body>
	{{> backButton}}
    <img src="/img/{{image}}" alt="profile pic" class="img-thumbnail rounded-circle d-block mx-auto" id="pfp">
	{{!-- <div class="status">
		<span class="dot"></span>
	</div> --}}
	<h1>{{name}}</h1>
	<div id="stats" class="container">
